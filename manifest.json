{
"name": "clock",
"version": "1.0.0",
"manifest_version": 2,
"permissions": [
	"http://*/*"
],
"background": {
	"scripts": ["background.js"]
},
"content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
	  "run_at": "document_end",
      "js": ["content.js"]
    }
],
"browser_action": {
      "default_title": "clock",
      "default_popup": "popup.html"
 },
"commands":{
	"_execute_browser_action":{
		"suggested_key":{
			"chromeos": "Ctrl+Shift+M",
			"linux": "Ctrl+Shift+M",
			"mac": "Command+Shift+M",
			"windows": "Ctrl+Shift+M"								
		}
	}
 }
}
